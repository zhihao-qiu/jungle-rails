
  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag '/login' do %>
      <table>
      <tr>
        <td>Email</td>
        <td><%= email_field_tag :email %></td>
      </tr>
        <td>Password</td>
        <td><%= password_field_tag :password %></td>
      </tr>
      </table>
        <%= submit_tag 'Submit', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>